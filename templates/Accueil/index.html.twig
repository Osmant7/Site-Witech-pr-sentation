    transition: all .2s ease-in-out;
}

.fa-user-circle:hover, .fa-female:hover, .fa-volume-up:hover, .fa-calendar-alt:hover, .fa-hourglass-half:hover, .fa-puzzle-piece:hover, .fa-chalkboard-teacher:hover, .fa-star:hover {
