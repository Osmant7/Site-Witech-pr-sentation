{# FIN FOOTER #}


{# FLECHE HAUT SITE #}

.cRetour {
  border-radius:3px;
  padding:10px;
  font-size:24px;
  text-align:center;
  color:#420068;
  background:rgba(0, 0, 0, 0.25);
  z-index:99999;
  transition:all ease-in 0.2s;
  position: fixed;
  cursor: pointer;
  bottom: 1em;
  right: 20px;
  display: none;
}
.cRetour:before{ content: "\25b2"; }
.cRetour:hover{
  background:rgba(0, 0, 0, 1);
  transition:all ease-in 0.2s;
}

{#  FIN FLECHE HAUT SITE #}

</style>


